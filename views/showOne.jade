extends base

block vars
  - var title = 'Node.js RestAPI'

block body
    center
            h1 #{user.name} Info
            table(border='1')
              thead
                tr
                    th id
                    th Breed
                    th Age
                tbody 
                        tr(class='even')
                            td #{user._id}
                            td #{user.breed}
                            td #{user.age}
            button(type='button', onclick="window.location.href='/api/'") Show All Dogs
                                
  include script.jade
  include footer.jade